<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.card.MaterialCardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/mcv_position"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_team_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="?colorSecondary">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_position"
            android:textColor="?colorOnSurface"
            android:textSize="14sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center"
            android:gravity="center"
            />
        
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_team_name"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/mcv_position"
        app:layout_constraintEnd_toStartOf="@id/tv_played"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_played"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/tv_team_name"
        app:layout_constraintEnd_toStartOf="@id/tv_wins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_wins"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/tv_played"
        app:layout_constraintEnd_toStartOf="@id/tv_draws"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_draws"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/tv_wins"
        app:layout_constraintEnd_toStartOf="@id/tv_losses"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_losses"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/tv_draws"
        app:layout_constraintEnd_toStartOf="@id/tv_goals"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_goals"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/tv_losses"
        app:layout_constraintEnd_toStartOf="@id/tv_points"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_points"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/tv_goals"
        app:layout_constraintEnd_toStartOf="@id/tv_percentage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

    <TextView
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_percentage"
        android:textColor="?colorOnSurface"
        android:textSize="14sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintStart_toEndOf="@id/tv_points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>